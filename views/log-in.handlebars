<div class="container-fluid" align="center" id="login-page">
	<div class="row">
		<div class="col-lg-12" align="center">
			<img class= "head" class="logo" src= assets/img/logo.png>			
		</div>
	</div>
	<div class="row" align="center" id="login-box">
	<div id- form class = "col-lg-12"">
		<h1 id="log">Login</h1>
		<div class="social-media-login">
					<a href="/auth/google" class="googleplus"><i class="fa fa-google-plus fa-2x social"></i></a>
					<a href="/auth/twitter" class="twitter"><i class="fa fa-twitter fa-2x social"></i></a>
					<a href="/auth/facebook" class="facebook"><i class="fa fa-facebook fa-2x social"></i></a>
		</div>
		<form method="POST" action="/auth/local-login">
		  	<div class="form-group">
		    	<label for="exampleInputEmail1">Email address</label>
		    	<input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
		  	</div>

		  	<div class="form-group">
		    	<label for="exampleInputPassword1">Password</label>
		    	<input type="password" name="password" class="form-control" id="pw" placeholder="Password">
		  	</div>
		  		<button type="submit" class="btn btn-primary" id=submit>Submit</button>
		</form><br>
			<a id = "link" href = /profile-create>Need an account?</a>
	</div>
	</div>
</div>

<script type="text/javascript" src="js/log-in.js"></script>